{
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "quotes": [
            "error",
            "double"
        ]
    },
    "overrides": [
        {
            "files": [
                "tests/**/*.js",
                "**/__mocks__/*.js"
            ],
            "env": {
                "jest": true
            }
        }
    ]
}
